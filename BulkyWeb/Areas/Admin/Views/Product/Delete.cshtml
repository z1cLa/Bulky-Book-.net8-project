@model Product


<div class="shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete</h2>
            </div>
        </div>
    </div>


    <div class="card-body p-3">
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" disabled class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-1"></label>
            <textarea asp-for="Description" disabled class="form-control"></textarea>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-1"></label>
            <input asp-for="ISBN" disabled class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-1"></label>
            <input asp-for="Author" disabled class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="p-1"></label>
            <input asp-for="ListPrice" disabled class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-1"></label>
            <input asp-for="Price" disabled class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price50" class="p-1"></label>
            <input asp-for="Price50" disabled class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price100" class="p-1"></label>
            <input asp-for="Price100" disabled class="form-control"/>
        </div>
        <div class="row">
            <div class="p-3 col-6 col-md-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="p-3 col-6 col-md-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to the list</a>
            </div>
        </div>


    </div>

</form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}