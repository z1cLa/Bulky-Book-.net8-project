@model Product

<div class="shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

    <form method="post" class="row">
        <div class="border p-3 mt-4">
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-1"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-1"></label>
            <input asp-for="ISBN" class="form-control"/>
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-1"></label>
            <input asp-for="Author" class="form-control"/>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="p-1"></label>
            <input asp-for="ListPrice" class="form-control"/>
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-1"></label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price50" class="p-1"></label>
            <input asp-for="Price50" class="form-control"/>
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price100" class="p-1"></label>
            <input asp-for="Price100" class="form-control"/>
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>


            <div class="row">
                <div class="p-1 col-6 col-md-6">
                    <button type="submit" class="btn btn-primary form-control" >Create</button>
                </div>
            <div class="p-1 col-6 col-md-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to the list</a>
            </div>
                
            </div>
                
                
        </div>
    </form>
    </div> 
</div>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}