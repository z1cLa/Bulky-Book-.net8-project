@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" class="form-control" disabled />

        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder" class="p-1"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled />
        </div>

        <div class="row">
            <div class="p-3 col-6 col-md-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="p-3 col-6 col-md-6">
                <a asp-page="/Categories/index" class="btn btn-outline-secondary border form-control">Back to the list</a>
            </div>

        </div>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
